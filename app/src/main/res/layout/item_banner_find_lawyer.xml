<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_410PX"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/DIMEN_20PX"
            android:layout_height="@dimen/DIMEN_120PX"
            android:layout_alignParentBottom="true"
            android:background="#50ffffff">

            <LinearLayout
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/tv_pression"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                android:layout_toEndOf="@+id/head_img"
                android:layout_toRightOf="@+id/head_img"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="@dimen/DIMEN_50PX"
                    android:layout_height="@dimen/DIMEN_50PX"
                    android:scaleType="centerInside"
                    android:src="@mipmap/xingxing" />

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="@dimen/DIMEN_50PX"
                    android:layout_height="@dimen/DIMEN_50PX"
                    android:scaleType="centerInside"
                    android:src="@mipmap/xingxing" />

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="@dimen/DIMEN_50PX"
                    android:layout_height="@dimen/DIMEN_50PX"
                    android:scaleType="centerInside"
                    android:src="@mipmap/xingxing" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/rating"
                android:paddingLeft="@dimen/DIMEN_20PX"
                android:text="律师名字"
                android:textColor="#1D92FC" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_nian"
            android:layout_width="@dimen/DIMEN_60PX"
            android:layout_height="@dimen/DIMEN_60PX"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:background="@mipmap/buleflag2"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/DIMEN_22PX" />

    </RelativeLayout>


</FrameLayout>
