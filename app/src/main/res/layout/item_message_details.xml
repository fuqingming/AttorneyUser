<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/DIMEN_20PX">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/DIMEN_100PX"
            android:layout_height="@dimen/DIMEN_100PX" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/DIMEN_100PX"
            android:layout_height="wrap_content"
            android:text="名字"
            android:gravity="center"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_head"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="@dimen/DIMEN_160PX"
            android:layout_height="wrap_content"
            android:text="2017-7-30"
            android:gravity="center"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_name"/>

        <ImageView
            android:id="@+id/img_evaluation"
            android:visibility="invisible"
            android:layout_width="@dimen/DIMEN_60PX"
            android:layout_height="@dimen/DIMEN_60PX"
            android:layout_alignParentRight="true"
            android:src="@mipmap/evaluation"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_message"
        android:layout_below="@id/layout_info"
        android:padding="@dimen/DIMEN_10PX"
        android:layout_marginLeft="@dimen/DIMEN_20PX"
        android:layout_marginRight="@dimen/DIMEN_20PX"
        android:text="留言信息留言信息留言信息留言信息留言信息留言信息留言信息留言信息留言信息"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
