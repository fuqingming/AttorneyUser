<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <include layout="@layout/common_title"
            android:id="@+id/title"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:background="@color/mainColor"
                    android:id="@+id/rl_roundbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_roundbox"
                        android:layout_width="@dimen/DIMEN_200PX"
                        android:layout_height="@dimen/DIMEN_200PX"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/DIMEN_40PX"
                        android:background="@color/mainColor"
                        android:src="@drawable/shape_round_image" />


                    <!--<com.xinfu.attorneyuser.ui.view.XCRoundImageView
                        android:id="@+id/head_img"
                        android:layout_width="@dimen/DIMEN_170PX"
                        android:layout_height="@dimen/DIMEN_170PX"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/b17711"
                        android:layout_marginLeft="@dimen/DIMEN_70PX"
                        android:layout_marginTop="@dimen/DIMEN_65PX"
                        android:layout_marginBottom="@dimen/DIMEN_65PX" />-->

                    <ImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="@dimen/DIMEN_170PX"
                        android:layout_height="@dimen/DIMEN_170PX"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/DIMEN_70PX"
                        android:layout_marginTop="@dimen/DIMEN_55PX" />
                </RelativeLayout>

                <LinearLayout
                    android:background="@color/mainColor"
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="@dimen/DIMEN_20PX"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DIMEN_60PX"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:text="--"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/DIMEN_32PX" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:paddingRight="@dimen/DIMEN_20PX"
                            android:paddingLeft="10dp"
                            android:text="·"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/DIMEN_32PX" />

                        <TextView
                            android:id="@+id/tv_office"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:text="--"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/DIMEN_32PX" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DIMEN_60PX"
                        android:layout_below="@id/img_roundbox"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/tv_profession1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:visibility="gone"
                            android:text="--"
                            android:textColor="@color/colorWhite" />
                        <LinearLayout
                            android:id="@+id/ll_profession2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:visibility="gone"
                            >
                            <View
                                android:layout_width="@dimen/DIMEN_1PX"
                                android:layout_height="@dimen/DIMEN_40PX"
                                android:layout_gravity="center"
                                android:background="@color/colorWhite"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"/>

                            <TextView
                                android:id="@+id/tv_profession2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="--"
                                android:textColor="@color/colorWhite" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_profession3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:visibility="gone"
                            >
                            <View
                                android:layout_width="@dimen/DIMEN_1PX"
                                android:layout_height="@dimen/DIMEN_40PX"
                                android:layout_gravity="center"
                                android:background="@color/colorWhite"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"/>

                            <TextView
                                android:id="@+id/tv_profession3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="--"
                                android:textColor="@color/colorWhite" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_profession4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:visibility="gone"
                            >

                            <View
                                android:layout_width="@dimen/DIMEN_1PX"
                                android:layout_height="@dimen/DIMEN_40PX"
                                android:layout_gravity="center"
                                android:background="@color/colorWhite"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"/>

                            <TextView
                                android:id="@+id/tv_profession4"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="--"
                                android:textColor="@color/colorWhite" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_star1"
                            android:layout_width="@dimen/DIMEN_50PX"
                            android:visibility="gone"
                            android:layout_height="@dimen/DIMEN_50PX"
                            android:src="@mipmap/xingxing" />

                        <ImageView
                            android:id="@+id/iv_star2"
                            android:visibility="gone"
                            android:layout_width="@dimen/DIMEN_50PX"
                            android:layout_height="@dimen/DIMEN_50PX"
                            android:src="@mipmap/xingxing" />

                        <ImageView
                            android:id="@+id/iv_star3"
                            android:visibility="gone"
                            android:layout_width="@dimen/DIMEN_50PX"
                            android:layout_height="@dimen/DIMEN_50PX"
                            android:src="@mipmap/xingxing" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_focus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/DIMEN_10PX"
                        android:background="@drawable/shape_text_lawmain"
                        android:gravity="center_horizontal"
                        android:paddingBottom="@dimen/DIMEN_10PX"
                        android:paddingLeft="@dimen/DIMEN_20PX"
                        android:paddingRight="@dimen/DIMEN_20PX"
                        android:paddingTop="@dimen/DIMEN_10PX"
                        android:text="关 注"
                        android:textColor="@color/orange" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DIMEN_1PX"
                        android:layout_marginBottom="@dimen/DIMEN_4PX"
                        android:layout_marginLeft="@dimen/DIMEN_40PX"
                        android:layout_marginRight="@dimen/DIMEN_40PX"
                        android:layout_marginTop="@dimen/DIMEN_4PX"
                        android:background="#60ffffff" />

                    <TextView
                        android:id="@+id/tv_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/DIMEN_10PX"
                        android:layout_marginLeft="@dimen/DIMEN_60PX"
                        android:layout_marginRight="@dimen/DIMEN_60PX"
                        android:layout_marginTop="@dimen/DIMEN_10PX"
                        android:maxLines="4"
                        android:ellipsize="end"
                        android:text="--"
                        android:textColor="@color/colorWhite" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/DIMEN_1PX"
                            android:layout_marginLeft="@dimen/DIMEN_40PX"
                            android:layout_marginRight="@dimen/DIMEN_40PX"
                            android:layout_marginTop="@dimen/DIMEN_10PX"
                            android:background="#60ffffff" />

                        <ImageView
                            android:layout_width="@dimen/DIMEN_40PX"
                            android:layout_height="@dimen/DIMEN_40PX"
                            android:layout_centerHorizontal="true"
                            android:background="@mipmap/triangle" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="@dimen/DIMEN_600PX"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/DIMEN_20PX"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_advice"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_text2_lawmain"
                            android:gravity="center"
                            android:paddingBottom="@dimen/DIMEN_10PX"
                            android:paddingLeft="@dimen/DIMEN_50PX"
                            android:paddingRight="@dimen/DIMEN_50PX"
                            android:paddingTop="@dimen/DIMEN_10PX"
                            android:text="咨 询"
                            android:textColor="@color/colorWhite" />

                        <TextView
                            android:id="@+id/tv_message"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/DIMEN_60PX"
                            android:background="@drawable/shape_text2_lawmain"
                            android:gravity="center"
                            android:paddingBottom="@dimen/DIMEN_10PX"
                            android:paddingLeft="@dimen/DIMEN_50PX"
                            android:paddingRight="@dimen/DIMEN_50PX"
                            android:paddingTop="@dimen/DIMEN_10PX"
                            android:text="留 言"
                            android:textColor="@color/colorWhite" />

                    </LinearLayout>



                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_backgrount_color"
                    />

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/colorWhite"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/tv_more_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/shape_blue_border"
                        android:gravity="center"
                        android:paddingBottom="@dimen/DIMEN_10PX"
                        android:paddingLeft="@dimen/DIMEN_20PX"
                        android:paddingRight="@dimen/DIMEN_20PX"
                        android:paddingTop="@dimen/DIMEN_10PX"
                        android:text="查 看 更 多 评 价"
                        android:textColor="@color/mainColor"
                        android:textSize="@dimen/DIMEN_26PX" />
                </RelativeLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <com.xinfu.attorneyuser.view.ErrorLayout
        android:id="@+id/error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</RelativeLayout>


