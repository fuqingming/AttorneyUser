<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<TextView
        android:id="@+id/tv_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_90PX" />-->


    <LinearLayout
        android:id="@+id/up_option_layout"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="@dimen/DIMEN_90PX"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_width="@dimen/DIMEN_70PX"
            android:layout_height="@dimen/DIMEN_70PX" />

        <TextView
            android:id="@+id/up_options_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_90PX"
            android:text="全部服务"
            android:gravity="center"
            android:textSize="@dimen/DIMEN_28PX"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/img_popup"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:layout_width="@dimen/DIMEN_70PX"
            android:layout_height="@dimen/DIMEN_70PX"
            android:layout_toRightOf="@id/up_options_list"
            android:src="@mipmap/xiala_1"/>

    </LinearLayout>

    <View
        android:id="@+id/lines1"
        android:layout_below="@+id/up_option_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/popup_recycler"
        android:layout_below="@id/lines1"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>



</RelativeLayout>
