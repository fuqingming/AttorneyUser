<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/DIMEN_40PX"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/DIMEN_80PX"
        android:layout_height="@dimen/DIMEN_80PX"
        android:src="@mipmap/vadiotitle"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/DIMEN_32PX"
        android:background="@drawable/shape_tv_tag_selected"
        android:text="执业律师"/>

</LinearLayout>
